{
  "name": "github-mcp-server",
  "version": "1.0.0",
  "description": "GitHub MCP Server for automated code comparison, refactoring, and PR creation",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "github-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "github",
    "ai",
    "automation",
    "refactoring",
    "pull-requests"
  ],
  "author": "GitHub MCP Server Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@octokit/auth-app": "^6.0.1",
    "@octokit/rest": "^20.0.2",
    "diff": "^5.1.0",
    "node-fetch": "^3.3.2",
    "ts-morph": "^21.0.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/diff": "^5.0.8",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "files": [
    "build",
    "README.md",
    "config.example.yml"
  ]
}
